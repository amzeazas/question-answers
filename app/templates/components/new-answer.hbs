{{#if addNewAnswer}}
  <h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name/username</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="text">Answer</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>

      <button class="btn btn-default" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'answerFormShow'}}>Add an Answer</button>
{{/if}}
