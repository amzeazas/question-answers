{{#if updateQuestionForm}}
  <h4>Update Question</h4>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="question">Question</label>
        {{textarea value=question.text id="question" class="form-control" placeholder=question.text}}
      </div>

      <div class="form-group">
        <label for="author">Your name/username</label>
        {{input value=question.author id="author" class="form-control" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{textarea value=question.notes id="notes" class="form-control" placeholder=question.notes}}
      </div>

      <button class="btn btn-default" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info btn-xs" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
