{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="text">Question</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Your name/username</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{textarea value=notes id="notes" class="form-control"}}
      </div>

      <button class="btn btn-default" {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
